<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.EmailConfirmFragment">

    <ImageView
        android:id="@+id/img_corner_top_3"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:src="@drawable/corner_top_3"
        />

    <ImageView
        android:id="@+id/img_email_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/cek_email"
        android:layout_marginTop="50dp"
        android:layout_below="@id/img_corner_top_3"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_email_confirm"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:paddingStart="65dp"
        android:paddingEnd="65dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Periksa Email Anda"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/notolight"
            android:gravity="center_horizontal"
            android:text="Silahkan Lakukan Konfirmasi pada email yang telah dikirimkan"
            android:textSize="16sp" />

        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="61dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="100dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/shape_corner"
            android:paddingStart="50dp"
            android:paddingEnd="50dp"
            android:text="Buka Email" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/notomedium"
            android:gravity="center_horizontal"
            android:text="Lewati Semua Konfirmasi"
            android:textSize="15sp" />
    </LinearLayout>

</RelativeLayout>