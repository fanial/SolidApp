<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.OnboardingFragment"
    android:background="@color/white">

    <ImageView
        android:id="@+id/img_corner_top_1"
        android:layout_width="match_parent"
        android:layout_height="216dp"
        android:layout_alignParentTop="true"
        android:src="@drawable/corner_top_1" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img_logo_app"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:scaleType="centerInside"
            android:paddingStart="5dp"
            android:paddingEnd="15dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:src="@drawable/logo_solid" />

        <TextView
            android:id="@+id/label_judul"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Solusi Limbah Indonesia"
            android:textSize="24sp"
            android:fontFamily="@font/notobold"
            android:textColor="?attr/colorPrimary"/>

        <TextView
            android:id="@+id/label_subjudul"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:gravity="center_horizontal"
            android:text="Aplikasi monitoring pengolahan sampah"
            android:textColor="@color/md_theme_primary"
            />
    </LinearLayout>


    <ImageView
        android:id="@+id/img_bottom_1"
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:layout_alignParentBottom="true"
        android:src="@drawable/corner_bottom_1" />

</RelativeLayout>