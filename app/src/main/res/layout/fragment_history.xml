<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.HistoryFragment">

    <TextView
        android:id="@+id/label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Riwayat Aktivitas"
        android:textStyle="bold"
        android:textSize="16sp"
        android:gravity="center"
        android:paddingTop="20dp"
        />

    <androidx.core.widget.NestedScrollView
        android:layout_below="@id/label"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/linearLayout"
        android:padding="20dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/list_history"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:listitem="@layout/card_history"/>
    </androidx.core.widget.NestedScrollView>

    <!--  Bottom Bar  -->
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bottom_app_bar"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:padding="15dp">

        <ImageView
            android:id="@+id/home"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="7dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="50dp"
            android:src="@drawable/home_icon"
            app:tint="@color/md_theme_tertiary" />

        <ImageView
            android:id="@+id/history"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="5dp"
            android:layout_marginEnd="50dp"
            android:src="@drawable/report_icon"
            app:tint="@color/md_theme_primary" />

        <ImageView
            android:id="@+id/report"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="2dp"
            android:src="@drawable/pie_chart_40px"
            app:tint="@color/md_theme_tertiary" />

        <ImageView
            android:id="@+id/profile"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="20dp"
            android:padding="9dp"
            android:layout_marginStart="50dp"
            android:src="@drawable/profile_icon"
            app:tint="@color/md_theme_tertiary" />
    </LinearLayout>
</RelativeLayout>